<div class="container py-4 h-100">
  <div class="row d-flex align-items-center justify-content-center h-100">
    <div class="col-md-8 col-lg-7 col-xl-6">
      <%= render partial: "images/loginSVG" %>
    </div>
    
    <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <p class="h1 fw-bold">Sign in</p><br>

          <div class="form-outline mb-3">
            <%= f.label :email, class:"form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.label :password, class:"form-label"%><br />
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control form-control-lg" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me, class:"form-check-input" %>
              <%= f.label :remember_me, class:"form-check-label" %>
            </div>
          <% end %>

          <div class="text-center text-lg-start my-2 pt-2"><%= f.submit "Log in", class:"btn btn-dark btn-lg btn-block" %></div>
          <span>No account yet? <%= link_to 'Sign up here', new_user_registration_path %></span>
      <% end %>

      <%# <%= render "devise/shared/links" %> 

    </div>
  </div>
</div>

